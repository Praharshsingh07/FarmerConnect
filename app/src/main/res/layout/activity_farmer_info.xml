<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top">


    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/farmer_photo"
            android:layout_width="200dp"
            android:src="@drawable/farmer_photo"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/f_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Subash"
                android:textSize="22dp"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="22yrs"
                android:textSize="22dp"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="AndhraPradesh"
                android:textSize="22dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_btm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@drawable/prod_btm"
        android:layout_below="@id/rel_top">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/farmer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="farmer_name"
                    android:textStyle="bold"
                    android:textSize="34dp"
                    android:textColor="@color/black"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/farmer_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="practices"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>



            </LinearLayout>

        </ScrollView>


        <Button
            android:id="@+id/donate_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Donate"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:background="@drawable/scan_btn"/>



    </RelativeLayout>


</RelativeLayout>

